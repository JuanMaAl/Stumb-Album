---
const stumblerName = Astro.props.stumblerName;
const altMessage = stumblerName ? `${stumblerName}` : 'Stumbler Card Image';
const imgUrl = "src/assets/stumblers/" + stumblerName + ".png";
---

<div>
    <img src={imgUrl} alt={altMessage} class="card" title={stumblerName}/>
</div>

<style>
    .card {
        width: 225px;
        height: 345px;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        border: solid 6px black;
    }

    .card:hover {
        transform: scale(1.10);
    }
</style>