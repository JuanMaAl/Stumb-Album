    .rarity-inusual {
        background-color: #28a745; /* Verde */
        color: white;
    }

    /* Raros (Azul) */
    .rarity-raro {
        background-color: #007bff; /* Azul */
        color: white;
    }

    /* Épicos (Lila/Púrpura) */
    .rarity-epico {
        background-color: #6f42c1; /* Lila */
