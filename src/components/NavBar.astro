        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2); /* Sombra suave */
    }

    /* Efecto Hover */
    .nav-buttons a:hover {
        transform: translateY(-2px); /* Pequeño levantamiento */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        opacity: 0.9;
    }

